@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "IndexShow";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="IndexShow" method="get" class="form-inline">
    <div class="form-group mb-2">
        <label for="category" class="mr-2">Filter by Category:</label>
        <input type="text" id="category" name="category" class="form-control" placeholder="Enter category" />
    </div>
    <button type="submit" class="btn btn-primary mb-2 ml-2">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
